{% extends "../layout.twig" %}

{% block content %}
    <section class="section section-shaped section-lg">

        <div class="container pt-lg-7">
            <div class="row justify-content-center">
                <div class="col-lg-5">
                    <div class="card bg-secondary shadow border-0">
                        <div class="card-header bg-white pb-5">
                            <div class="text-muted text-center mb-3">Create chirp</div>
                            <div class="btn-wrapper text-center">

                            </div>
                        </div>
                        <div class="card-body px-lg-5 py-lg-5">

                            <form role="form" method="post" action="/chirps/new">
                                <div class="form-group mb-3">
                                    <div class="input-group input-group-alternative">

                                        <textarea name="chirp" id="chirp" cols="30" rows="10"></textarea>
                                    </div>
                                </div>

                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary my-4">Chirp</button>
                                </div>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>

{% endblock %}